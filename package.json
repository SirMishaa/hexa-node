{
	"name": "hexa-node",
	"version": "0.0.0",
	"type": "module",
	"description": "learning hexagonal architecture with a basic e-commerce clone",
	"main": "dist/index.cjs",
	"engines": {
		"node": ">=19.0.0"
	},
	"engineStrict": true,
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.js",
			"default": "./dist/index.cjs"
		}
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"run:watch": "node --watch dist/index.cjs",
		"build": "tsup --metafile --dts",
		"build:watch": "tsup --watch --onSuccess 'node dist/index.js | pino-pretty -c -t'",
		"format": "dprint fmt",
		"lint": "run-p lint:*",
		"lint:format": "dprint fmt",
		"lint:types": "tsc",
		"lint:js": "eslint .",
		"prepublishOnly": "pnpm build",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sachinraja/eslint-config": "0.2.0",
		"@types/node": "18.11.18",
		"@vitest/coverage-c8": "^0.26.2",
		"dprint": "0.32.2",
		"eslint": "8.27.0",
		"husky": "^8.0.2",
		"npm-run-all": "4.1.5",
		"pino-pretty": "^9.1.1",
		"tsup": "6.4.0",
		"typescript": "4.9.4",
		"vite": "3.2.5",
		"vitest": "0.26.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pnpm run lint"
		}
	},
	"sideEffects": false,
	"packageManager": "pnpm@7.20.0",
	"dependencies": {
		"fastify": "^4.10.2",
		"pino": "^8.8.0",
		"zod": "^3.20.2"
	}
}
